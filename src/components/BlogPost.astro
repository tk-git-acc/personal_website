---
const { post } = Astro.props;
const rawDate = new Date(post.frontmatter.pubDate);
const formattedDate = rawDate.toLocaleDateString("en-GB");
---
<li>
  <a href={post.url}>
    {post.frontmatter.title} (<small>{formattedDate}</small>)
  </a>
</li>

<style>
  li {
    margin: 0.5rem 0;
  }

  a {
    color: #39FF14;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }