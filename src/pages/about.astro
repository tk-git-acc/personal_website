---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
const pageTitle = "About";

const identity = {
  name: "tk",
  country: "UK",
  occupation: "IT Engineer",
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "SQL", "Azure", "Linux & Windows Operating Systems", "System Admin"];

const skillColor = "navy";
---
<BaseLayout pageTitle={pageTitle}>
	<p>I live in the {identity.country}, working as an {identity.occupation}.</p>
	<p>I am buiding this site using the Astro JS web framework.</p>
	<p>This website will include projects that I work on.</p>
	<p>My skills & experience include:</p>
	<ul>
	{skills.map((skill) => <li class="skill">{skill}</li>)}
	</ul>
</BaseLayout>

